<% layout('../layout') -%>

<h2><%= run.leader.name %>'s <%= run.zone %> run</h2>

<%
var i = 0;
%>
<h3>Players</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Player</th>
            <th>Points</th>
        </tr>
    </thead>
    <tbody>
        <% run.users.forEach(function(user) { %>
        <tr class='users'>
            <td>
                <input type='text' class='form-control user-name' name='user[<%= i %>][name]' value='<%= user %>' disabled='disabled' />
            </td>
            <td>
                <input type='text' class='form-control user-points' name='user[<%= i %>][points]' value='<%= run.points %>' disabled='disabled' />
            </td>
        </tr>
        <%
            i++;
        }); %>
    </tbody>
</table>
<%
i = 0;
%>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Item</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        <% run.items.forEach(function(item) { %>
            <tr class='items'>
                <td>
                    <input type='text' class='form-control item-name' name='item[<%= i %>][name]' value='<%= item %>'  disabled='disabled' />
                </td>
                <td>
                    <input type='text' class='form-control item-value' name='item[<%= i %>][value]' value='1' disabled='disabled' />
                </td>
            </tr>
        <%
            i++;
        }); %>
    </tbody>
</table>
